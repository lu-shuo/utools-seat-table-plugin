{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "element-plus/global",
      "utools-api-types"
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "plugin"]
}
